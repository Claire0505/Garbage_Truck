<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomerTheme_Blue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/blue_dark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/bule</item>
    </style>

    <style name="CustomerTheme_Black" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/background_black</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/black_dark</item>
        <item name="colorAccent">@color/blue_dark</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:navigationBarColor">@color/gray</item>
    </style>

    <style name="CustomerTheme_Pink" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/customercolorAccent</item>
        <item name="colorPrimaryDark">@color/header</item>
        <item name="colorAccent">@color/customercolorAccent</item>
        <item name="android:navigationBarColor">@color/customercolorAccent</item>
    </style>

    <style name="CustomerTheme_Purple" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple1</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="android:colorBackground">@color/purple</item>
        <item name="colorAccent">@color/light_purple</item>
        <item name="android:navigationBarColor">@color/purple1</item>
        <item name="android:statusBarColor">@color/purple</item>
    </style>
</resources>