<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.admin.claire.garbag_truck.MainActivity">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:background="#41f1eded"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:contentDescription="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text=""
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#ffffff"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textTemp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="" />
        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/listNote"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_below="@id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutImg"/>


    <LinearLayout
        android:id="@+id/layoutImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageTruck"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/transport"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/imageLocation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_location_on_black_36dp"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/imageNote"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/notes"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/imageInfo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_info_black_36dp"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>
</RelativeLayout>
    <!--側開式選單-->
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ab889197">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/setting_layout"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageSetting"
                    android:tint="#ffffff"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/settings"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:text="@string/settings"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
            android:id="@+id/tag_layout"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/imageTag"
                android:tint="#ffffff"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="5dp"
                app:srcCompat="@drawable/tag"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="@string/tag"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
            <LinearLayout
                android:id="@+id/about_layout"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageAbout"
                    android:tint="#ffffff"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/about"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:text="@string/about"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/direction_layout"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageDir"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="5dp"
                    android:tint="#ffffff"
                    app:srcCompat="@drawable/help"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:text="@string/direction"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>