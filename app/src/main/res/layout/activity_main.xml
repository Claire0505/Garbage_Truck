<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="com.admin.claire.garbag_truck.MainActivity">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_img"
            android:layout_width="56dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/transport1"
            android:contentDescription="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/app_name"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textTemp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_internet" />
        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/listNote"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageTruck"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_button"
            app:srcCompat="@drawable/transport"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/imageLocation"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_button"
            app:srcCompat="@drawable/ic_location_on_black_36dp"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/imageNote"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_button"
            app:srcCompat="@drawable/notes"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/imageAlarm"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_button"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_alarm_on_black_36dp" />

    </LinearLayout>

</RelativeLayout>
